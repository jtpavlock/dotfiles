# increase volume
"amixer set Master 5%+"
        XF86AudioRaiseVolume

# decrease volume
"amixer set Master 5%-"
        XF86AudioLowerVolume

# toggle mute
"pactl set-sink-mute 1 toggle"
        XF86AudioMute

# mpd toggle play/pause
"mpc toggle"
        XF86AudioPlay

# mpd next song
"mpc next"
        XF86AudioNext

# mpd previous song
"mpc prev"
        XF86AudioPrev

# increase screen brightness
"xbacklight -inc 10"
        XF86MonBrightnessUp

# decrease screen brightness
"xbacklight -dec 10"
        XF86MonBrightnessDown
